{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Settings": {
        "EnableSwagger": true,
        "DocsEndpoint": "docs",
        "DocsSwaggerOptions": {
            "HeaderDescription": "The ODNS API offers weekly DNS scan data across the entire IPv4 space,<br>identifying open resolvers, forwarders, and transparent forwarders.",
            "Title": "ODNS API",
            "ContactName": "TUD",
            "ContactEmail": "m.waehlisch@tu-dresden.de",
            "SwaggerHeaderCss": "<style> .swagger-ui .topbar a {display: none;}</style>"
        },
        "PortLinux": 5551,
        "Caching": {
            "UseTimeout": true,
            "TimeoutMinutes": 30
        }
    },
    "Database": {
        "dbtype": "POSTSQL",
        "ConnectionString": "",
        "Functions": {
            "GetDnsEntries": "odns.get_dns_entries"
        }
    },
    "RateLimiting": {
        "PolicyName": "fixed",
        "PermitLimit": 2,
        "WindowInSeconds": 10,
        "QueueLimit": 0
    },
    "HealthCheck": {
        "EvaluationTimeInSeconds": 10,
        "MaximumHistoryEntriesPerEndpoint": 60,
        "ApiMaxActiveRequests": 1,
        "DatabaseTimeoutInSeconds": 5,
        "MemoryThresholdInGB": 2
    }
}
