{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Settings": {
        "EnableSwagger": true,
        "PortLinux": 5551,
        "Caching": {
            "UseTimeout": true,
            "TimeoutMinutes": 30
        }
    },
    "Database": {
        "dbtype": "POSTSQL",
        "ConnectionString": "Host=localhost;Port=5432;Username=postgres;Password=mysecretpassword;Database=postgres;Search Path=odns;Pooling=true;MinPoolSize=1;MaxPoolSize=10;Connection Idle Lifetime=20;ApplicationName=odnsapi;Timeout=500;CommandTimeout=500;Include Error Detail=true;",
        "Functions": {
            "GetDnsEntries": "odns.get_dns_entries",
            "RequestToken": "securitymecs.get_token",
            "InspectToken": "securitymecs.inspect_token"
        }
    },
    "RateLimiting": {
        "PolicyName": "fixed",
        "PermitLimit": 5,
        "WindowInSeconds": 10,
        "QueueLimit": 2
    },
    "Security": {
        "Type": "apikey",
        "TokenDelivery": "async",
        "HeaderTokenField": "X-API-Key"
    }
}
